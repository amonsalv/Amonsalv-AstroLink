---
import { socials } from "index.json";
import Section from "@/components/Section.astro";

import { Icon } from 'astro-icon/components';

const SOCIAL_ICONS: Record<string, string> = {
  Discord: 'mdi:discord',
  Facebook: 'mdi:facebook',
  GitHub: 'mdi:github',
  Instagram: 'mdi:instagram',
  Link: 'mdi:link',
  LinkedIn: 'mdi:linkedin',
  Mail: 'mdi:email',
  Map: 'mdi:map',
  Medium: 'mdi:medium',
  Spotify: 'mdi:spotify',
  TikTok: 'mdi:tiktok',
  Twitch: 'mdi:twitch',
  WhatsApp: 'mdi:whatsapp',
  X: 'mdi:twitter',
  Bereal: 'mdi:Bereal',
  Threads: 'mdi:threads',
  YouTube: 'mdi:youtube'
};
---

<Section>
  <div class="container">
    {
      socials.map(({ network, username, url }) => {
        const iconName = SOCIAL_ICONS[network];

        return (
          <a
            href={url}
            aria-label={`Visita el perfil de ${username} en ${network}`}
            target="_blank"
            rel="noopener noreferrer"
          >
            <Icon name={iconName} />
          </a>
        );
      })
    }
  </div>
</Section>

<style>
  .container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .container a {
    color: white;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid white;
    padding: 4px;
    height: 50px;
    width: 50px;
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  .container a svg {
    width: 32px; /* Ajusta el tamaño del ícono */
    height: 32px; /* Ajusta el tamaño del ícono */
  }
</style>
