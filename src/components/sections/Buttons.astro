---
import { buttons } from "index.json";
import Section from "@/components/Section.astro";

import { Icon } from 'astro-icon/components';

const SOCIAL_ICONS: Record<string, string> = {
  Discord: 'mdi:discord',
  Facebook: 'mdi:facebook',
  GitHub: 'mdi:github',
  Instagram: 'mdi:instagram',
  Link: 'mdi:link',
  LinkedIn: 'mdi:linkedin',
  Mail: 'mdi:email',
  Map: 'mdi:map',
  Medium: 'mdi:medium',
  Spotify: 'mdi:spotify',
  TikTok: 'mdi:tiktok',
  Twitch: 'mdi:twitch',
  WhatsApp: 'mdi:whatsapp',
  X: 'mdi:twitter',
  Bereal: 'mdi:Bereal',
  Threads: 'mdi:threads',
  YouTube: 'mdi:youtube',
  Telegram: 'mdi:telegram'
};
---

<Section>
  <div class="container">
    {
      buttons.map(
        ({ network, url, title, textColor, backgroundColor, borderRadius }) => {
          const iconName = SOCIAL_ICONS[network];

          return (
            <a
              href={url}
              class="button"
              target="_blank"
              style={`
                background-color: ${backgroundColor};
                color:${textColor};
                border-radius:${borderRadius};`}
            >
                <Icon name={iconName} class="button-icon"/>
                <span class="button-text">{title}</span>
            </a>
          );
        }
      )
    }
  </div>
</Section>

<style>
  .container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    width: 90%;
    padding: 16px 24px;
    margin: 0 auto;
    transition: all 300ms cubic-bezier(0.23, 1, 0.32, 1);
    user-select: none;
    border: 2px solid #222222c5;
    -webkit-user-select: none;
    touch-action: manipulation;
    will-change: transform;
    position: relative;
  }

  .button-icon {
    margin-right: 8px;
    font-size: 24px;
    /* position: absolute; */
    left: 16px;
  }

  .button-text {
    flex: 1;
    text-align: left;
  }

  .button:hover {
    box-shadow: rgba(0, 0, 0, 0.479) 0 8px 15px;
    transform: translateY(-2px);
  }

  .button:active {
    box-shadow: none;
    transform: translateY(0);
  }
</style>