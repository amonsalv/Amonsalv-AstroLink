---
import { header } from "index.json";
import Section from "@/components/Section.astro";

const { title, description, image, alt, textColor } = header;
---


<Section>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-02L604PYLP"></script>
    <script>
      {`
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
  
        gtag('config', 'G-02L604PYLP');
      `}
    </script>

  <div class="container" style={`color: ${textColor};`}>
    <img src=`${image}` alt=`${alt}` />
    <h1>{title}</h1>
    <h2>{description}</h2>
  </div>
</Section>

<style>
  h1 {
    padding-top: 1rem;
    font-size: 2rem;
  }

  h2 {
    padding-top: 0.5rem;
    font-size: 1.1rem;
    font-weight: normal;
    text-wrap: pretty;
  }

  img {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    width: 128px;
    border-radius: 50%;
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
  }
</style>
